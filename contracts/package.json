{
  "name": "shapes-of-mind-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Shapes of Mind NFT project",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network shapeSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network shape",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "verify:sepolia": "hardhat verify --network shapeSepolia",
    "verify:mainnet": "hardhat verify --network shape",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "type": "commonjs",
  "keywords": [
    "nft",
    "ethereum",
    "smart-contracts",
    "shapes-of-mind"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.0.0",
    "hardhat": "^2.26.0"
  },
  "dependencies": {
    "ethers": "^6.15.0"
  }
}
